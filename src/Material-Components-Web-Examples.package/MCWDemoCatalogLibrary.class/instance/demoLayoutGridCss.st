.demo-grid {
  background-color: #DDDDDD;
  margin-bottom: 32px;
}

.demo-cell {
  box-sizing: border-box;
  background-color: #666666;
  height: 200px;
  padding: 8px;
  color: white;

  font-size: 1.5em;
}

.demo-parent-cell {
  position: relative;
  background-color: #aaaaaa;
}

.demo-parent-cell>span{
  position: absolute;
  top: 8px;
  left: 8px;
  font-size: 1.5em;
  color: white;
}

.demo-child-cell {
  position: relative;
}

.demo-child-cell>span{
  position: absolute;
  bottom: 8px;
  right: 8px;
  color: #ddd;
}

.demo-grid.max-width {
  max-width: 1280px;
}

.demo-grid-legend {
  margin: 16px 0 8px 0;
}

.demo-ruler {
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  bottom: 0;
  left: 0;
  height: 20px;
  width: 100%;
  margin: 0;
  background: black;
  color: white;
}

.demo-controls {
  display: none;
  margin-bottom: 8px;
}
.demo-warning::after {
  content: "This browser does not support custom properties, so margins and gutters cannot be changed at runtime.";
}

@supports (--foo: green) {
  .demo-controls {
    display: block;
  }

  .demo-warning::after {
    content: "";
  }
}

.examples {
  margin: 24px;
}

.hero .demo-grid {
  min-width: 360px;
}

.hero .demo-cell {
  height: 60px;
}
